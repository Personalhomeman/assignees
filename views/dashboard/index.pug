extends ../layout

mixin card(value, text, icon)
  .col-lg-3.col-md-6
    .panel.panel-default
      .panel-heading
        .row
          .col-xs-3
            i(class=`fa fa-${icon} fa-5x`)
          .col-xs-9.text-right
            h2
              if isNaN(value)
                | #{value || 'n/a'}
              else
                | #{value < 1e5 ? value : d3Format.format('.5s')(value)}
            div #{text}

block content
  h2 #{title}
  hr

  .row
    +card(nbRepositories, 'repositories', 'code-fork')
    +card(nbEnabledRepos, 'enabled repos', 'check-circle-o')
    +card(nbUsers, 'users', 'users')
    +card(nbPrivateUsers, 'users with private repos', 'lock')
