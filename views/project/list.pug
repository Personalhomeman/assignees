extends ../layout
include ./mixins

block content
  h2 #{title}
  hr

  .row
    .col-md-3
      .row
        .col-md-12
          div.organizations
            for o in organizations
              a(
                href='/projects/' + o.name,
                class=(current_org ? (o.name == current_org.name ? 'active' : 'hidden-xs hidden-sm') : undefined)
              )
                img(src=o.avatar_url)
                span.name #{o.name}
            if current_org
              a(
                href='/projects',
                class='hidden-md hidden-lg'
              )
                i.fa.fa-chevron-left
                span.name Select another organization

      +last-sync('/sync/organizations', 'synchronize your organizations', user.last_synchronized_at)
      if github_app_id
        .application-link.hidden-xs.hidden-sm
          | Is an organization missing?
          a(href=`https://github.com/settings/connections/applications/${github_app_id}`)
            | &nbsp;Review and add
          | &nbsp;your authorized organizations.

    if current_org
      div.col-md-9
        ul.repositories
          for r in repositories
            li(class=`repository${r.private ? ' is-private' : ''}`)
              div.name
                if r.enabled
                  .row
                    .col-sm-5
                      | !{r.getIconSVG()}
                      | &nbsp;
                      | #{r.name}
                      | &nbsp;
                      span.label.label-success
                        | enabled by&nbsp;
                        | #{r.enabled_by.login === user.github_login ? 'you' : r.enabled_by.login}

                    .col-sm-7.hidden-xs
                      form(
                        action=`/projects/${current_org.name}/${r.name}/configure`,
                        method='POST',
                        class='form-inline pull-right'
                      )
                        div.form-group.form-group-sm
                          label(for='max-reviewers')
                            | Max reviewers:
                          input(
                            name='max',
                            value=r.max_reviewers,
                            type='number',
                            min=1,
                            class='form-control max-reviewers-input',
                            id='max-reviewers'
                          )

                        .checkbox
                          label
                            input(name='skip', type='checkbox', checked=r.skip_wip)
                            |&nbsp;Skip&nbsp;
                            abbr(title='Work In Progress')
                              | WIP

                        input(type='hidden', name='_csrf', value=_csrf)
                        button(type='submit', class='btn btn-default btn-sm')
                          i.fa.fa-wrench
                          | save

                else
                  | !{r.getIconSVG()}
                  | &nbsp;
                  | #{r.name}

                  if r.github_hook_id
                    | &nbsp;
                    span.label.label-default paused

              div.actions.hidden-xs
                if r.enabled
                  form(
                    action=`/projects/${current_org.name}/${r.name}/pause`,
                    method='POST',
                    class='action'
                  )
                    input(type='hidden', name='_csrf', value=_csrf)
                    button.btn.btn-warning
                      i.fa.fa-pause-circle-o
                      | pause
                else
                  form(action=`/projects/${current_org.name}/${r.name}/enable`, method='POST')
                    input(type='hidden', name='_csrf', value=_csrf)
                    button.btn.btn-success
                      i.fa.fa-play-circle-o
                      if r.github_hook_id
                        | restart
                      else
                        | start
          else
            +no-repository

        +last-sync(
          `/sync/projects/${current_org.name}`,
          `synchronize ${current_org.name}'s repositories`,
          current_org.last_synchronized_at
        )

    else
      div.col-md-9
        +no-org-chosen
